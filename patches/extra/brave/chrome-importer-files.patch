+bool IsLastActiveProfile(const std::string& profile,
+                         const base::Value::List& last_active_profiles) {
+  for (const auto& it : last_active_profiles) {
+    if (it.GetString() == profile) {
+      return true;
+    }
+  }
+  return false;
