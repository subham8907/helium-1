+    const auto* dict = value.GetIfDict();
+    if (!dict) {
+      continue;
+    }
+    uint16_t items = user_data_importer::NONE;
+    auto* profile = dict->FindString("id");
+    auto* name = dict->FindString("name");
+    DCHECK(profile);
