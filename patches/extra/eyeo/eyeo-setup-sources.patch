+
+#include "chrome/browser/adblock/adblock_service.h"
+#include "chrome/browser/profiles/profile.h"
+#include "components/adblock/core/subscription/subscription_service_impl.h"
+
+namespace adblock {
+
+AdblockService::AdblockService(Profile* profile) : profile_(profile) {
+  subscription_service_ = std::make_unique<SubscriptionServiceImpl>(
+      profile->GetPrefs(),
+      profile->GetDefaultStoragePartition()
+          ->GetURLLoaderFactoryForBrowserProcess());
+}
+
+AdblockService::~AdblockService() = default;
+
+void AdblockService::Shutdown() {
+  if (subscription_service_) {
+    subscription_service_.reset();
+  }
+}
+
+}  // namespace adblock